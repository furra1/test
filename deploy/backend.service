[Unit]
Description=SPH Backend Service
After=network.target

[Service]
Type=simple
User=www-data
WorkingDirectory=/var/www/sph/restApi
Environment="PYTHONPATH=/var/www/sph/restApi"
Environment="PORT=8000"
ExecStart=/usr/bin/python3 /var/www/sph/restApi/main.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target

